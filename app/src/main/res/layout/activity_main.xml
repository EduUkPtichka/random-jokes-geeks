<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_relis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingHorizontal="12dp"
        android:textSize="36sp"
        tools:text="My fast food addiction is really starting to cause me issues." />

    <TextView
        android:id="@+id/tv_elaboration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingHorizontal="4dp"
        android:textSize="28sp"
        android:textStyle="italic"
        tools:text="For starters, I can't find anywhere in New York that does a decent cheetah sandwich." />

    <Button
        android:background="@color/black"
        android:id="@+id/bt_api_get_joke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="28dp"
        android:text="Нажми и получи"
        android:textSize="28sp"
        android:textColor="@color/white"/>

</LinearLayout>